<main class="edit">
            <!-- Edit Page (Only for logged-in users) -->
            <section id="edit">
                <div class="form">
                    <h2>Delete item</h2>
                    <form class="edit-form" method="POST">
                        <input type="text" name="name" id="name" placeholder="Name" value="{{stone.name}}" />
                        <input type="text" name="category" id="category" placeholder="Category" value="{{stone.category}}" />
                        <input type="text" name="color" id="color" placeholder="Color" value="{{stone.color}}" />
                        <input type="text" name="image" id="stone-img" placeholder="Image" value="{{stone.image}}" />
                        <input type="text" name="location" id="location" placeholder="Location" value="{{stone.location}}" />
                        <input type="text" name="formula" id="formula" placeholder="Formula" value="{{stone.formula}}" />
                        <textarea id="description" placeholder="Description..."
                            name="description">{{stone.description}}</textarea>
                        <button type="submit">Delete</button>
                        <a href="/details/{{stone._id}}" class="details-btn">Cancel</a>
                    </form>
                </div>
            </section>
        </main>